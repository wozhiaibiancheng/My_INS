<merge xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/profile_photo"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Profile Photo"
                android:id="@+id/changeProfilePhoto"
                android:layout_below="@id/profile_photo"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="@color/link_blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/changeProfilePhoto"
                android:layout_marginTop="20dp"
                android:id="@+id/relLayout1"
                android:background="@drawable/white_grey_border_top"
                >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Name"
                    android:textSize="18sp"
                    android:id="@+id/text1"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/text1"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:inputType="textNoSuggestions"
                    android:background="@drawable/white_grey_border_bottom"
                    android:id="@+id/textName"
                    android:hint="Name" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout1"
                android:id="@+id/relLayout2">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Username"
                    android:textSize="18sp"
                    android:id="@+id/text2"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/text2"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:inputType="textNoSuggestions"
                    android:background="@drawable/white_grey_border_bottom"
                    android:id="@+id/textUsername"
                    android:hint="Username"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout2"
                android:id="@+id/relLayout3">


                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Website"
                    android:textSize="18sp"
                    android:id="@+id/text3"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/text3"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:inputType="textNoSuggestions"
                    android:background="@drawable/white_grey_border_bottom"
                    android:id="@+id/textWebsite"
                    android:hint="Website"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout3"
                android:id="@+id/relLayout4">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Bio"
                    android:textSize="18sp"
                    android:id="@+id/text4"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/text4"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:inputType="textNoSuggestions"
                    android:background="@null"
                    android:id="@+id/textBio"
                    android:hint="Bio"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relLayout4"
                android:id="@+id/relLayout8"
                android:background="@drawable/white_grey_border_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Private Information"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout8"
                android:layout_marginTop="20dp"
                android:id="@+id/relLayout5">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Email"
                    android:textSize="18sp"
                    android:id="@+id/text5"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/text5"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:inputType="textNoSuggestions"
                    android:background="@drawable/white_grey_border_bottom"
                    android:id="@+id/textEmail"
                    android:hint="Email" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout5"
                android:id="@+id/relLayout6">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Phone"
                    android:textSize="18sp"
                    android:id="@+id/text6"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/text6"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:inputType="textNoSuggestions"
                    android:background="@drawable/white_grey_border_bottom"
                    android:id="@+id/textPhone"
                    android:hint="Phone"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout6"
                android:id="@+id/relLayout7">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Gender"
                    android:textSize="18sp"
                    android:id="@+id/text7"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/text7"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:inputType="textNoSuggestions"
                    android:background="@drawable/white_grey_border_bottom"
                    android:id="@+id/textGender"
                    android:hint="Gender"/>

            </RelativeLayout>






        </RelativeLayout>

    </ScrollView>


</merge>