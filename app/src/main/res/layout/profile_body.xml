<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:id="@+id/profile_top">
     <include layout="@layout/profile_top"></include>
 </RelativeLayout>


<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/middle_section"
android:layout_below="@+id/profile_top">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/top_border"
    android:id="@+id/stats">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:orientation="horizontal"
    android:id="@+id/liLayout"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:weightSum="100">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="23">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/profile_pic"
            android:layout_centerVertical="true"
            app:civ_border_color="@color/grey"
            android:layout_marginLeft="5dp"
            app:civ_border_width="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="80">
        <include layout="@layout/profile_stats"></include>
    </RelativeLayout>

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liLayout"
        android:layout_marginBottom="10dp"
        android:id="@+id/info">

        <TextView
            android:id="@+id/display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingBottom="3dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/display_name"
            android:text=""
            android:paddingLeft="20dp" />

    </RelativeLayout>

</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/stats"
    android:layout_marginBottom="50dp"
    android:id="@+id/pics">

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_grid"
        android:numColumns="3"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:gravity="center"
        android:stretchMode="columnWidth">

    </GridView>

</RelativeLayout>


</RelativeLayout>
    </RelativeLayout>


</merge>