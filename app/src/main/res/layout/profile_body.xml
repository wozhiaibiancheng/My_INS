<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:id="@+id/profile_top">
     <include layout="@layout/profile_top"></include>
 </RelativeLayout>


<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/middle_section"
android:layout_below="@+id/profile_top">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/liLayout"
    android:padding="10dp"
    android:weightSum="100"
    android:background="@drawable/bottom_border">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:layout_marginStart="15dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/profile_pic"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            app:civ_border_color="@color/grey"
            app:civ_border_width="0.5dp"/>

        <TextView
            android:id="@+id/display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_pic"
            android:text="Jupiter"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingTop="5dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="75">
        <include layout="@layout/profile_stats"></include>
    </RelativeLayout>

</LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/liLayout"
    android:layout_marginBottom="50dp"
    android:id="@+id/pics">

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_grid"
        android:numColumns="3"
        android:layout_marginTop="10dp"

        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:gravity="center"
        android:stretchMode="columnWidth">

    </GridView>

</RelativeLayout>


</RelativeLayout>
    </RelativeLayout>


</merge>